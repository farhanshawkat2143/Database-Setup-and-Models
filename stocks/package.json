{
  "name": "stock-tracking-system",
  "version": "1.0.0",
  "description": "Time-series stock tracking system with trend analysis and pattern recognition",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:timeseries": "jest tests/timeSeries.test.js",
    "test:coverage": "jest --coverage",
    "seed": "node scripts/seedDatabase.js",
    "seed:cv": "node scripts/seedComputerVisionData.js",
    "generate:trends": "node scripts/generateTrendData.js",
    "generate:cycles": "node scripts/generateRestockCycles.js",
    "demo": "node examples/apiDemo.js",
    "demo:realtime": "node examples/realTimeDemo.js",
    "demo:continuous": "node examples/continuousUpdates.js",
    "build-css": "tailwindcss -i ./src/input.css -o ./public/styles.css",
    "watch-css": "tailwindcss -i ./src/input.css -o ./public/styles.css --watch"
  },
  "keywords": [
    "stock",
    "tracking",
    "time-series",
    "mongodb",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "supertest": "^6.3.3",
    "tailwindcss": "^4.1.13"
  }
}
